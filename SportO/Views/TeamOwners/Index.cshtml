@model IEnumerable<SportO_SLMS.Models.Team>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<p>
    <a asp-action="Create" asp-controller="Teams">Create New Team</a>
</p>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.name, "Index", "Rosters", new { id = item.Id}, null)
                </td>   
                <td>
                    <a asp-action="Edit" asp-controller="Teams" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-controller="Teams" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-controller="Teams" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

