@model IEnumerable<SportO_SLMS.Models.League>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1></h1>

<p>
    <a asp-action="Create" asp-controller="Leagues">Create New League</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.leagueName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sport.type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.leagueName, "Index", "Teams", new { id = item.Id }, null)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sport.type)
                </td>
                <td>
                    <a asp-action="GenerateMatches" asp-controller="Matches" asp-route-id="@item.Id">Generate Matches</a> |
                    <a asp-action="Edit" asp-controller="Leagues" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-controller="Leagues" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-controller="Leagues" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
