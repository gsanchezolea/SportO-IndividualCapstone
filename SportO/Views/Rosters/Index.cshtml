@model IEnumerable<SportO_SLMS.Models.Roster>



<h1>Roster</h1>


<table class="table">
    <thead>
        <tr>                   
            <th>
                @Html.DisplayNameFor(model => model.Player.firstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player.lastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>                       
            <td>
                @Html.DisplayFor(modelItem => item.Player.firstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Player.lastName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
