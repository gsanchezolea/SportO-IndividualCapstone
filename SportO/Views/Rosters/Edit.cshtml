@model SportO_SLMS.Models.Roster

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Roster</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="playingPosition" class="control-label"></label>
                <input asp-for="playingPosition" class="form-control" />
                <span asp-validation-for="playingPosition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="kitNumber" class="control-label"></label>
                <input asp-for="kitNumber" class="form-control" />
                <span asp-validation-for="kitNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="accountActive" /> @Html.DisplayNameFor(model => model.accountActive)
                    </label>
                </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
